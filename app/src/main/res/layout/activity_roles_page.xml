<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.rolesPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rolesToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="@font/russo_one"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="@string/roles"
        app:titleTextColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_ww"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/wolfrole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WwTeam" />

    <TextView
        android:id="@+id/WwTeam"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/russo_one"
        android:text="Werewolf Team"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rolesToolbar" />

    <TextView
        android:id="@+id/HumanTeam"
        android:layout_width="98dp"
        android:layout_height="17dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/russo_one"
        android:text="Human Team"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ww" />

    <Button
        android:id="@+id/btn_vilager"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/villagerrole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HumanTeam" />

    <Button
        android:id="@+id/btn_guard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/knightrole"
        app:layout_constraintEnd_toEndOf="@+id/btn_vilager"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_vilager"
        app:layout_constraintTop_toBottomOf="@+id/btn_vilager" />

    <Button
        android:id="@+id/btn_seer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/seerrole"
        app:layout_constraintEnd_toStartOf="@+id/btn_guard"
        app:layout_constraintTop_toBottomOf="@+id/btn_vilager" />

    <Button
        android:id="@+id/btn_hunter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/hunterrole"
        app:layout_constraintStart_toEndOf="@+id/btn_guard"
        app:layout_constraintTop_toBottomOf="@+id/btn_vilager" />

</androidx.constraintlayout.widget.ConstraintLayout>